<div class="container">

<table>
  <tr>
    <th>投稿一覧</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <td><%= link_to "ブログを編集する", edit_blog_path(blog.id) %></td>
    <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>


<% end %>
</table>
<%= link_to 'ブログ一覧画面にもどる', blogs_path, class: 'btn btn-default'  %>
<%= link_to '新しくブログを投稿する', new_blog_path, class: 'btn btn-default'  %>

</div>
