<div class="container">
  <header class="header">ブログ一覧</header>
    <nav class="menu">
        <ul class="row">
            <li class="col-md-4">top</li>
            <li class="col-md-4">menu1</li>
            <li class="col-md-4">menu2</li>
        </ul>
    </nav>

<p><%= notice %></p>

<table>
  <tr>
    <th>内容</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <td><%= link_to "ブログを編集する", edit_blog_path(blog.id) %></td>
    <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>


<% end %>
</table>
<%= link_to 'ブログ一覧画面にもどる', blogs_path %>
<%= link_to '新しくブログを投稿する', new_blog_path %>

</div>
