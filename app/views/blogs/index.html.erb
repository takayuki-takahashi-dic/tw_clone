<div class="container-fluid">


<table class="table table-striped">
  <tr>
    <th>投稿一覧</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id), class: 'btn btn-default'%></td>
    <td><%= link_to "ブログを編集する", edit_blog_path(blog.id), class: 'btn btn-default' %></td>
    <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default' %></td>
  </tr>


<% end %>
</table>
<%= link_to '新規投稿', new_blog_path, class: 'btn btn-default'  %>

</div>
